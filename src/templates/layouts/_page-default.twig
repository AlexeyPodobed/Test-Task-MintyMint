<!-- prettier-ignore -->
{% import "mixins/_mixins.twig" as mixins %}
{% set inline = mixins.inline %}
{% set svg = mixins.svg %}

<!DOCTYPE html>
<html lang="en">
	{% include './_head.twig' %}

	<body data-page-name="{{ pageName }}">
		{% include 'blocks/_header.twig' %}

		<!-- prettier-ignore -->
		{% block content %}{% endblock %}

		{% include 'blocks/_footer.twig' %}

		<script src="/js/app.js"></script>

		<script>
			const gtagBtns = document.querySelectorAll('.js-get-started-button');
			
			gtagBtns.forEach((button) => {
				button.addEventListener('click', function () {
					gtag('event', 'sign_up', {
						event_category: 'button_click',
						event_label: 'get_started',
					});
				});
			});
			
			const modalButtons = document.querySelectorAll('.js-modal-button');
			
			modalButtons.forEach((button) => {
				button.addEventListener('click', function () {
					const modalId = button.getAttribute('data-modal');
					if (modalId) {
						gtag('event', 'modal_open', {
							event_category: 'modal_interaction',
							event_label: modalId,
						});
					}
				});
			});
			
			const linkForFree = document.querySelectorAll('.js-link-for-free');
			
			linkForFree.forEach((link) => {
				link.addEventListener('click', function () {
					gtag('event', 'generate_lead', {
						event_category: 'link_interaction',
						event_label: 'Try xPider for Free',
					});
				});
			});
		</script>
	</body>
</html>
